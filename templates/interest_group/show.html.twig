{% extends 'base.html.twig' %}

{% block title %}InterestGroup{% endblock %}

{% block body %}
    <h1>InterestGroup</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ interest_group.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ interest_group.name }}</td>
            </tr>
            <tr>
                <th>Users</th>
                {% for group in interest_group.userParticipations %}
                    <td>{{group.user.name}}</td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_interest_group_index') }}">back to list</a>

    <a href="{{ path('app_interest_group_edit', {'id': interest_group.id}) }}">edit</a>

    {% if is_granted('ROLE_ADMIN') %}
        {{ include('interest_group/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
